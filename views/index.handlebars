<h1>Eat-Da-Burger!</h1>

<h2>Ready to be devoured: </h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Already devoured:</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <label for="burger"></label>
    <textarea name="name" id="burger" placeholder="Type your burger's name"
    ></textarea>
  </div>

  <button class="text-white" type="submit">Add a Burger!</button>

</form>
